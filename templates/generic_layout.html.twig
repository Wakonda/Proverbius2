<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content="{% block meta_tag_description %}Proverbius est une encyclopédie francophone regroupant les plus beaux proverbes français.{% endblock %}" />
		<meta name="keywords" content="proverbes, proverbe, dicton" />
		{% block meta_tag %}
		<meta name="robots" content="index,follow" />
		{% endblock %}
		<meta name="msvalidate.01" content="FB19BE8A55C1B235B4389DE2169412FA" />

		<link rel="shortcut icon" href="{{ asset('photo/favicon.ico') }}">
		<title>{% block head_title %}{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

		{% block style_additional %}
		{% endblock %}

		{% block script_additional_sup %}
		{% endblock %}
		<script src="{{ asset('js/jquery.js') }}"></script>
	</head>
	<body>
		<div class="resize"></div>
		<!-- Div Wrapper Element Starts Here -->
		<div id="Wrapper">
			<!-- Header Element Starts Here -->
			<header id="header">
				<!-- Hgroup Element Starts Here -->
				<hgroup id="title">
					<div id="logo">
						<a href="{{ path('index') }}" alt="">
							<img src="{{ asset('photo/logo.png') }}" alt="logo" />
							<span>Proverbius</span>
						</a>
					</div>
					<!--<h1>Creating HTML5 <span>Responsive Web Template Using Media Queries</span></h1>-->
					<h2 class="mt-2">{{ 'main.index.WonderfulWorldOfProverb'|trans|raw }}</h2>
				</hgroup>
				<!-- Hgroup Element Ends Here -->

				<!-- Nav Element Starts Here -->
				<nav class="navbar navbar-expand-lg navbar-light bg-white navbar-expand-md my-2 text-center">
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item  {{ app.request.get('_route') in ['index']  ? 'active' : '' }}">
								<a class="nav-link" href="{{ path('index') }}"><i class="fas fa-home"></i> {{ 'menu.top.MainPage'|trans }}</a>
							</li>
							<li class="nav-item {{ app.request.get('_route') in ['bycountries', 'country']  ? 'active' : '' }}">
								<a class="nav-link" href="{{ path('bycountries') }}">{{ 'menu.top.Countries'|trans }}</a>
							</li>
							<li class="nav-item {{ app.request.get('_route') in ['byletters', 'letter']  ? 'active' : '' }}">
								<a class="nav-link" href="{{ path('byletters') }}">{{ 'menu.top.AlphabetBook'|trans }}</a>
							</li>
							<li class="nav-item {{ app.request.get('_route') in ['store', 'read_store']  ? 'active' : '' }}">
								<a class="nav-link" href="{{ path('store') }}">{{ 'menu.top.Store'|trans }}</a>
							</li>
							<li class="nav-item {{ app.request.get('_route') in ['byimages']  ? 'active' : '' }}">
								<a class="nav-link" href="{{ path('byimages') }}">{{ 'menu.top.Images'|trans }}</a>
							</li>
						</ul>
					</div>
				</nav>
			</header>
			<!-- Header Element Ends Here -->
			<!-- Div wrapper2 starts here -->
			<div id="Wrapper2" class="d-flex">
				<!-- Sidebar Element Starts Here -->
				<aside id="sidebar-wrapper" class="align-self-stretch">
					<nav class="sidebar">
						<h1>{{ 'menu.left.RecentPublications'|trans }}</h1>
						{{ render(controller('App\\Controller\\IndexController::lastAction')) }}
						
						<div class="social-media-icons">
							<a class="facebook" href="https://www.facebook.com/Proverbius-1894996570590486" target="_blank"><i class="fab fa-facebook-square fa-3x"></i></a>
							{% if app.request.locale == "en" %}
							<a class="twitter" href="https://twitter.com/ProverbiusE" target="_blank"><i class="fab fa-twitter-square fa-3x"></i></a>
							{% elseif app.request.locale == "fr" %}
							<a class="twitter" href="https://twitter.com/poeticus12" target="_blank"><i class="fab fa-twitter-square fa-3x"></i></a>
							{% endif %}
							{% if app.request.locale == "fr" %}
							<a class="pinterest" href="https://www.pinterest.ru/amatukamiproverbius/proverbes/" target="_blank"><i class="fab fa-pinterest-square fa-3x"></i></a>
							{% elseif app.request.locale == "en" %}
							<a class="pinterest" href="https://www.pinterest.ru/amatukamiproverbius/proverbs/" target="_blank"><i class="fab fa-pinterest-square fa-3x"></i></a>
							{% endif %}
							<a class="instagram" href="https://www.instagram.com/_proverbius/" target="_blank"><i class="fab fa-instagram fa-3x"></i></a> 
							<a class="widget" style="color: #33b242;" href="{{ path('generate_widget') }}"><i class="fas fa-share-alt-square fa-3x"></i></a> 
						</div>
						<h1>{{ 'menu.left.FollowUs'|trans }}</h1>
						<span class="follow_on_twitter"><a href="https://twitter.com/poeticus12" class="twitter-follow-button" data-show-count="false" data-lang="fr" data-size="large" data-dnt="true">Suivre @poeticus12</a>
						<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script></span>
					</nav>

					<nav class="sidebar">
						<h1>{{ 'menu.left.Publicity'|trans }}</h1>
						<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
						<!-- Poeticus_right_menu -->
						<ins class="adsbygoogle"
							 style="display:inline-block;width:250px;height:250px"
							 data-ad-client="ca-pub-1951906303386196"
							 data-ad-slot="5545754940"></ins>
						<script type="text/javascript">
						(adsbygoogle = window.adsbygoogle || []).push({});
						</script>
					</nav>
					
					<nav class="sidebar">
						<h1>{{ 'menu.left.HelpUs'|trans }}</h1>
						{% if app.request.locale == "en" %}
						<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top" class="text-center">
							<input type="hidden" name="cmd" value="_donations" />
							<input type="hidden" name="business" value="5XXNV9Q7AGB2E" />
							<input type="hidden" name="currency_code" value="USD" />
							<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
							<img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
						</form>
						{% else %}
						<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top" class="text-center">
							<input type="hidden" name="cmd" value="_donations" />
							<input type="hidden" name="business" value="5XXNV9Q7AGB2E" />
							<input type="hidden" name="currency_code" value="EUR" />
							<input type="image" src="https://www.paypalobjects.com/fr_FR/FR/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
							<img alt="" border="0" src="https://www.paypal.com/fr_FR/i/scr/pixel.gif" width="1" height="1" />
						</form>
						{% endif %}
					</nav>

					<nav class="sidebar">
						<h1>{{ 'menu.left.Statistics'|trans }}</h1>
						{{ render(controller('App\\Controller\\IndexController::statAction')) }}
					</nav>

					<nav class="sidebar">
						<h1>{{ 'menu.left.MemberArea'|trans }}</h1>
						<ul>
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								{% if is_granted("ROLE_ADMIN") %}
									<li><a href="{{ path('admin') }}">{{ 'menu.left.Admin'|trans }}</a></li>
								{% endif %}
								<li><a href="{{ path('user_show') }}">{{ 'menu.left.MyProfile'|trans }}</a></li>
								<li><a href="{{ path('user_udpatepassword') }}">{{ 'menu.left.ChangeMyPassword'|trans }}</a></li>
								<li><a href="{{ path('user_edit') }}">{{ 'menu.left.EditProfile'|trans }}</a></li>
								<li><a href="{{ path('logout') }}">{{ 'menu.left.LogOut'|trans }}</a></li>
							{% else %}
								<li><a href="{{ path('login') }}" alt="">{{ 'menu.left.LogIn'|trans }}</a></li>
								<li><a href="{{ path('user_new') }}" alt="">{{ 'menu.left.CreateAccount'|trans }}</a></li>
							{% endif %}
						</ul>
					</nav>

					<nav class="sidebar">
						<h1>{{ 'menu.left.Languages'|trans }}</h1>
							<a href="{{ path('change_language', {'locale':'fr'}) }}" title="Français"><img src="{{ asset('photo/language/fr.png') }}" alt="Fr" width="42" {{ app.request.locale == "fr" ? 'class="selected_language rounded"' : 'class="rounded"' }}></a>
							| <a href="{{ path('change_language', {'locale':'en'}) }}" title="English"><img src="{{ asset('photo/language/en.png') }}" alt="En" width="42" {{ app.request.locale == "en" ? 'class="selected_language rounded"' : 'class="rounded"' }}></a>
						</ul>
					</nav>
				</aside>
				<!-- Another Sidebar Element Ends Here -->
				<!-- Article Element Starts Here -->
				<article id="contents" class="align-self-stretch">
					<!-- Article's Header Element Starts Here -->
					<header>
						<h1>{% block main_title %}{{ 'main.index.WelcomeTo'|trans }}{% endblock %}</h1>
					</header>
					
					{% for message in app.session.getFlashBag.get('message') %}
						<div class="alert alert-success">{{ message }}</div>
					{% endfor %}
					
					{% block main_content %}{% endblock %}
					<div class="advert">
					<p class="ad_title hidden_print">{{ 'menu.left.Publicity'|trans }}</p>
					<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
					<!-- poeticus_down -->
					<ins class="adsbygoogle"
						 style="display:block"
						 data-ad-client="ca-pub-1951906303386196"
						 data-ad-slot="1788413344"
						 data-ad-format="auto"></ins>
					<script>
					(adsbygoogle = window.adsbygoogle || []).push({});
					</script></div>
				</article>
				<!-- Article Element Ends Here -->
			</div>
			<!-- Div wrapper2 ends here -->

			<!-- Footer Element Starts Here -->
			<footer id="copyrights">
				<p>© {{ ("2017" == "now"|date("Y")) ? "2017" : "2017 - " ~ "now"|date("Y") }} <a href="{{ path('page_display', {'name' : 'copyright'}) }}">Proverbius</a> by <a href="https://wakonda.guru">Wakonda.guru</a> - <a href="{{ path('page_display', {'name' : 'about'}) }}">{{ 'menu.footer.About'|trans }}</a> - <a href="{{ path('page_display', {'name' : 'privacyPolicy'}) }}">{{ 'menu.footer.PrivacyPolicy'|trans }}</a> - <a href="{{ path('contact') }}">{{ 'menu.footer.ContactUs'|trans }}</a></p>
			</footer>
			<!-- Footer Element Ends Here -->
		</div>
		<!-- Div Wrapper Element ends Here -->
		
		{{ encore_entry_script_tags('app') }}
		<script src="{{ asset(minify_file('js/cookiechoices/cookiechoices.js')) }}"></script>

		<script>
			$(function() {
				cookieChoices.showCookieBar({
					linkHref: '{{ path("page_display", {"name" : "cookie"}) }}',
					language: 'fr'
				});
			});
		</script>

		{% block script_additional %}
		{% endblock %}
	</body>
</html>