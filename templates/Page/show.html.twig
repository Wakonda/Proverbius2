{% extends 'generic_layout.html.twig' %}

{% block head_title %}Admin Page{% endblock %}
{% block main_title %}Administration - Page{% endblock %}

{% block main_content %}
	<table class="admin_show">
		<tr>
			<th>Titre</th>
			<td>{{ entity.title }}</td>
		</tr>
		<tr>
			<th>Texte</th>
			<td>{{ entity.text|raw }}</td>
		</tr>
		<tr>
			<th>Nom international</th>
			<td>{{ entity.internationalName }}</td>
		</tr>
		<tr>
			<th>Photo</th>
			<td><p class="center">{{ ("photo/page/"~entity.photo)|max_size_image() }}</p></td>
		</tr>
	</table>
	<hr>
	<a href="{{ path('pageadmin_edit', { 'id' : entity.id }) }}"><i class="fa fa-edit"></i> Modifier</a> - <a href="{{ path('pageadmin_new') }}"><i class="fa fa-plus-square"></i> Cr√©er</a>
{% endblock %}