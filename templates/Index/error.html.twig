{% extends 'generic_layout.html.twig' %}

{% block head_title %}{{ "error.index.Error"|trans }} {{ code }}{% endblock %}
{% block main_title %}{{ "error.index.Error"|trans }} {{ code }}{% endblock %}

{% block script_additional %}
	<script src="{{ asset('js/jquery.qtip/jquery.qtip.min.js') }}"></script>
	<script type="text/javascript">
		$(function() {
			$("div#error_content").hide();

			$("#state_error_content span").click(function() {
				var state = $(this).data("stateError");

				if(state == "more")
				{
					$(this).removeClass("fa-plus");
					$(this).addClass("fa-minus");
					$("div#error_content").slideDown();
					$(this).data("stateError", "less");
				}
				else
				{
					$(this).removeClass("fa-minus");
					$(this).addClass("fa-plus");
					$("div#error_content").slideUp();
					$(this).data("stateError", "more");
				}
			});
		});
	</script>
{% endblock %}

{% block main_content %}
	<p class="text-center"><img src="{{ asset('photo/error-page.jpg') }}" alt="" /></p>
	<br>
	{% if code == "404" %}
		<p>{{ "error.index.PageNotFound"|trans }}</p>
	{% else %}
		<p>Une <b>erreur {{ code }}</b> est survenue. Si le problème persiste, n'hésitez pas à nous <a href="{{ path('contact') }}" alt="">contacter</a> afin que nous puissions le résoudre le plus rapidement possible !</p>
	{% endif %}
	<hr>
	<div class="error error_content">
	<div id="state_error_content">
		<span class="fa fa-plus pointer" data-state-error="more"> </span>
	</div>
	<div id="error_content">
		{{ message }}
	</div>
	</div>
{% endblock %}