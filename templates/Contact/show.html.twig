{% extends 'generic_layout.html.twig' %}

{% block head_title %}Admin Contact{% endblock %}
{% block main_title %}Administration - Contact{% endblock %}

{% block main_content %}
	<table class="admin_show">
		<tr>
			<th>Sujet</th>
			<td>{{ entity.subject }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ entity.mail }}</td>
		</tr>
		<tr>
			<th>Message</th>
			<td>{{ entity.message|raw }}</td>
		</tr>
		<tr>
			<th>Lu ?</th>
			<td>
				{% if entity.readMessage is null %}
					Non
				{% else %}
					Oui
				{% endif %}
			</td>
		</tr>
		<tr>
			<th>Date d'envoi</th>
			<td>{{ entity.dateSending|date("d/m/Y H:i:s") }}</td>
		</tr>
	</table>
{% endblock %}