{% extends 'generic_layout.html.twig' %}

{% block head_title %}Admin Recueil{% endblock %}
{% block main_title %}Administration - Recueil{% endblock %}

{% block main_content %}
	<table class="admin_show">
		<tr>
			<th>Pseudo</th>
			<td>{{ entity.username }}</td>
		</tr>
		<tr>
			<th>Rôles</th>
			<td>{{ entity.roles|join(', ') }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ entity.email }}</td>
		</tr>
		<tr>
			<th>Activé</th>
			<td>{{ entity.enabled == 1 ? '<span style="color: green;">&#x2713</span>' : '<span style="color: red;">&#x2718</span>' }}</td>
		</tr>
	</table>
	<hr>
	{% if entity.enabled == 1 %}
		<a href="{{ path('useradmin_enabled', { 'id' : entity.id, 'state' : 0 }) }}" class="btn btn-danger">Désactiver</a>
	{% else %}
		<a href="{{ path('useradmin_enabled', { 'id' : entity.id, 'state' : 1 }) }}" class="btn btn-success">Activer</a>
	{% endif %}
{% endblock %}